def main():
    filename = input("Enter the filename: ")

    try:
        file = open(filename, 'r')
        lines = file.readlines()
        file.close()

        for i in range(len(lines)):
            lines[i] = lines[i].strip()

        print("The file contains", len(lines), "lines.")

        while True:
            line_number = input("Enter a line number (0 to quit): ")

            if line_number.isdigit():
                line_number = int(line_number)

                if line_number == 0:
                    print("Goodbye!")
                    break  
                elif 1 <= line_number <= len(lines):
                    print("Line", line_number, ":", lines[line_number - 1])
                else:
                    print("Invalid line number. Please enter a number between 1 and", len(lines))
            else:
                print("Please enter a valid number.")

    except FileNotFoundError:
       
        print("The file '" + filename + "' does not exist. Please try again.")

if __name__ == "__main__":
    main()
